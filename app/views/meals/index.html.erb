
<h1>Meals</h1>

<div class="cards">
<% @meals.each do |meal| %>
<div class="card-meal">
  <%= link_to show_meal_path(meal) do %>
  <%= cl_image_tag("http://lorempixel.com/400/300/food/?random=sok0qq3xyf6cmfpnlgsp.jpg")%>
  <%# <%= image_tag "http://lorempixel.com/400/300/food/?random=#{meal.id}"%> 
  <% end %>
  <div class="card-meal-descr">
      <div class="text">
        <h3><%= meal.name %></h3>
        <p><%= meal.description %></p>
      </div>
      <h2 class="card-meal-pricing"><%= meal.price%></h2>

  </div>
</div>
<% end %>
</div>

